<div class="dashboard_container container">
  <div class="cards">
    <% @items.each do |item| %>
      <%= link_to item_path(item) do %>
        <div class="card-trip">
          <%= image_tag(item.image) %>
          <div class="card-trip-infos">
            <div>
              <h2><%= truncate(item.item_name, length: 28) %></h2>
              <p><%= truncate(item.description, length: 70) %></p>
            </div>
            <h2 class="card-trip-pricing"><%= number_with_precision(item.price, precision: 2) %>â‚¬</h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
